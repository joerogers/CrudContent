<manifest
    package="com.example.crudcontent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.CityActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.EditCityActivity"
            android:label="@string/title_activity_add_city"
            android:parentActivityName=".activity.CityActivity"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.crudcontent.activity.CityActivity"/>
        </activity>

        <provider
            android:name=".provider.SampleProvider"
            android:authorities="${applicationId}.provider.SampleProvider"
            android:enabled="true"
            android:exported="false"/>

    </application>

</manifest>
